<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledButton">
        <item name="android:background">@drawable/selector_button_filled</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">@dimen/button_large</item>
        <item name="android:paddingEnd">@dimen/button_large</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="OutlinedButton">
        <item name="android:background">@drawable/selector_button_outlined</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">@dimen/button_large</item>
        <item name="android:paddingEnd">@dimen/button_large</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextButton">
        <item name="android:background">@drawable/selector_button_text</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">@dimen/button_large</item>
        <item name="android:paddingEnd">@dimen/button_large</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:background">@drawable/bg_button_floating_action</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAppearance">@style/BodyMedium</item>
        <item name="android:elevation">@dimen/elevation_low</item>
        <item name="android:padding">@dimen/button_large</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>
