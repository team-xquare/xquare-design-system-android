<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseXChip" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/padding_4</item>
        <item name="android:paddingEnd">@dimen/padding_4</item>
        <item name="android:paddingTop">@dimen/padding_4</item>
        <item name="android:paddingBottom">@dimen/padding_4</item>
        <item name="android:textAppearance">@style/LabelMedium</item>
    </style>

    <style name="FilledXChip" parent="BaseXChip">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:background">@drawable/bg_chip_filled_enabled</item>
        <item name="leadingSrcTint">?attr/colorOnSecondary</item>
        <item name="trailingSrcTint">?attr/colorOnSecondary</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="OutlinedXChip" parent="BaseXChip">
        <item name="android:background">@drawable/bg_chip_outlined_enabled</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="leadingSrcTint">?attr/colorSecondary</item>
        <item name="trailingSrcTint">?attr/colorSecondary</item>
    </style>

    <style name="TextXChip" parent="BaseXChip">
        <item name="android:background">@drawable/bg_chip_text_enabled</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="leadingSrcTint">?attr/colorSecondary</item>
        <item name="trailingSrcTint">?attr/colorSecondary</item>
        <item name="android:outlineProvider">none</item>
    </style>

</resources>
