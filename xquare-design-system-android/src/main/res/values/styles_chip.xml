<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_bg_filled</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="OutlinedChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_outlined</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="TextChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_text</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

</resources>