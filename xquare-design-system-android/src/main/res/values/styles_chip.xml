<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_bg_filled</item>
        <item name="android:paddingStart">@dimen/padding_chip_small</item>
        <item name="android:paddingEnd">@dimen/padding_chip_small</item>
        <item name="android:paddingTop">@dimen/padding_chip_small</item>
        <item name="android:paddingBottom">@dimen/padding_chip_small</item>
    </style>

    <style name="OutlinedChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_outlined</item>
        <item name="android:paddingStart">@dimen/padding_chip_small</item>
        <item name="android:paddingEnd">@dimen/padding_chip_small</item>
        <item name="android:paddingTop">@dimen/padding_chip_small</item>
        <item name="android:paddingBottom">@dimen/padding_chip_small</item>
    </style>

    <style name="TextChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_chip_text</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:paddingStart">@dimen/padding_chip_small</item>
        <item name="android:paddingEnd">@dimen/padding_chip_small</item>
        <item name="android:paddingTop">@dimen/padding_chip_small</item>
        <item name="android:paddingBottom">@dimen/padding_chip_small</item>
    </style>

</resources>
