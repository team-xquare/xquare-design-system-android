<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_chip_filled_enabled</item>
        <item name="android:padding">@dimen/padding_chip_small</item>
    </style>

    <style name="OutlinedChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_chip_outlined_enabled</item>
        <item name="android:padding">@dimen/padding_chip_small</item>
    </style>

    <style name="TextChip">
        <item name="android:minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_chip_text_enabled</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:padding">@dimen/padding_chip_small</item>
    </style>

</resources>
