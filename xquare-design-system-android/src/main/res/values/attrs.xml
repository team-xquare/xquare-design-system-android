<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XdsTextView">
        <attr name="android:text" format="string|integer" />
        <attr name="android:textColor" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="XButton">
        <attr name="android:text" format="reference|string|integer" />
        <attr name="android:enabled" format="boolean" />
        <attr name="leadingSrc" format="reference|integer" />
        <attr name="trailingSrc" format="reference|integer" />
        <attr name="leadingSrcTint" format="color" />
        <attr name="trailingSrcTint" format="color" />
        <attr name="textStyle" format="reference" />
        <attr name="android:textColor" format="reference|integer" />
        <attr name="android:fontFamily" format="reference" />
        <attr name="leadingSrcSize" format="integer" />
        <attr name="trailingSrcSize" format="integer"/>
    </declare-styleable>

    <declare-styleable name="XIconButton">
        <attr name="android:enabled" format="boolean" />
        <attr name="android:src" format="reference|integer" />
        <attr name="android:tint" format="color" />
        <attr name="srcSize" format="integer"/>
    </declare-styleable>

</resources>
