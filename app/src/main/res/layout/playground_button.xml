<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_vertical"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.xquare.xdsandroid.button.XButton
            style="@style/FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled"
            app:leadingSrc="@drawable/ic_test"
            app:trailingSrc="@drawable/ic_test" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/playground_disabled"
            app:leadingSrc="@drawable/ic_test" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.xquare.xdsandroid.button.XButton
            style="@style/OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/primary"
            android:text="@string/playground_enabled"
            app:leadingSrc="@drawable/ic_test"
            app:trailingSrc="@drawable/ic_test" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/primary"
            android:enabled="false"
            android:text="@string/playground_disabled"
            app:leadingSrc="@drawable/ic_test" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.xquare.xdsandroid.button.XButton
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/primary"
            android:text="@string/playground_enabled"
            app:leadingSrc="@drawable/ic_test"
            app:trailingSrc="@drawable/ic_test" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/primary"
            android:enabled="false"
            android:text="@string/playground_disabled"
            app:leadingSrc="@drawable/ic_test" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.xquare.xdsandroid.button.XButton
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_enabled"
            app:leadingSrc="@drawable/ic_test"
            app:trailingSrc="@drawable/ic_test" />

        <com.xquare.xdsandroid.button.XButton
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/playground_disabled"
            app:leadingSrc="@drawable/ic_test" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.xquare.xdsandroid.button.XIconButton
            style="@style/FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/playground_icon_button_content_description"
            android:src="@drawable/ic_test" />

        <com.xquare.xdsandroid.button.XIconButton
            style="@style/OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/playground_icon_button_content_description"
            android:src="@drawable/ic_test"
            android:tint="@color/primary" />

        <com.xquare.xdsandroid.button.XIconButton
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/playground_icon_button_content_description"
            android:enabled="false"
            android:src="@drawable/ic_test"
            android:tint="@color/primary" />

        <com.xquare.xdsandroid.button.XIconButton
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/playground_icon_button_content_description"
            android:src="@drawable/ic_test" />

    </LinearLayout>

</LinearLayout>
